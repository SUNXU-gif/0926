<h2>投稿一覧</h2>

<h3>投稿検索</h3>
<%= search_form_for @q, url: posts_path do |f| %>
  タイトル <%= f.text_field :title_cont %><br>
  投稿内容 <%= f.text_field :content_cont %><br>
  <%= f.submit "検索" %>
<% end %>

<h3>一覧</h3>
<table border="1">
  <tr>
    <th>タイトル</th>
    <th>投稿内容</th>
    <th></th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "投稿詳細", post_path(post) %></td>
    </tr>
  <% end %>
</table>
