<h1>ユーザー一覧</h1>

<h3>ユーザー検索</h3>
<%= search_form_for @q, url: mypages_path, method: :get do |f| %>
  <p>
    <label>名前</label><br>
    <%= f.search_field :name_cont %>
  </p>
  <%= f.submit "検索" %>
<% end %>

<h3>一覧</h3>
<table class="table">
  <tr><th>名前</th><th></th></tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to "投稿詳細", mypage_path(user) %></td>
    </tr>
  <% end %>
</table>
