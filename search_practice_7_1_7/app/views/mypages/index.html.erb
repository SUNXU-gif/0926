<h2>ユーザー一覧</h2>

<h3>ユーザー検索</h3>
<%= search_form_for @q, url: mypages_path do |f| %>
  名前 <%= f.text_field :name_cont %><br>
  <%= f.submit "検索" %>
<% end %>

<h3>一覧</h3>
<table border="1">
  <tr>
    <th>名前</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to "投稿詳細", mypage_path(user) %></td>
    </tr>
  <% end %>
</table>
