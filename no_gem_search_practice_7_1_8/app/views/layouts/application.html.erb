<!DOCTYPE html>
<html>
  <head>
    <title>NoGemSearchPractice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <style>
      .nav{background:#f29b19;padding:10px}
      .nav a{margin-right:20px;color:#fff;text-decoration:none;font-weight:600}
      h2{margin:24px 0 12px}
      h3{margin:18px 0 8px}
      table{border-collapse:collapse;margin-top:8px}
      th,td{border:1px solid #999;padding:6px 10px}
      label{display:block;margin:6px 0 4px}
      input[type=text], textarea, select{padding:4px;min-width:240px}
      .container{padding:12px 20px}
      .actions{margin-top:10px}
    </style>
  </head>
  <body>
    <div class="nav">
      <%= link_to "新規料理", new_cooking_path %>
      <%= link_to "新規ジャンル", new_genre_path %>
      <%= link_to "料理一覧", cookings_path %>
      <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
