<h1>サインアップ画面</h1>

<%= form_with model: @user, url: signup_path, local: true do |f| %>
  <p>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.text_area :email %>
  </p>
  <p>
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "パスワードの確認" %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit "サインアップ" %>
<% end %>

<%= link_to "トップ画面に戻る", root_path %>
