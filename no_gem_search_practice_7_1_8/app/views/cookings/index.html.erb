<h2>料理一覧</h2>

<h3>検索</h3>
<%= form_with url: cookings_path, method: :get, scope: nil do |f| %>
  <label>料理名で検索</label>
  <%= f.text_field :dish_name, value: params[:dish_name] %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name, include_blank: " ") %>
  <%= f.submit "検索" %>
<% end %>

<h3>一覧</h3>
<table>
  <tr>
    <th>料理名</th>
    <th>ジャンル</th>
    <th>説明</th>
    <th></th>
  </tr>
  <% @cookings.each do |c| %>
    <tr>
      <td><%= c.title %></td>
      <td><%= c.genre.genre_name %></td>
      <td><%= c.content %></td>
      <td><%= link_to "料理詳細", cooking_path(c) %></td>
    </tr>
  <% end %>
</table>
