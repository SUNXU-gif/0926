<h1>投稿一覧</h1>

<h3>投稿検索</h3>
<%= search_form_for @q, url: posts_path, method: :get do |f| %>
  <p>
    <label>タイトル</label><br>
    <%= f.search_field :title_cont %>
  </p>
  <p>
    <label>投稿内容</label><br>
    <%= f.search_field :content_cont %>
  </p>
  <%= f.submit "検索" %>
<% end %>

<h3>一覧</h3>
<table class="table">
  <tr>
    <th>タイトル</th><th>投稿内容</th><th></th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "投稿詳細", post_path(post) %></td>
    </tr>
  <% end %>
</table>
