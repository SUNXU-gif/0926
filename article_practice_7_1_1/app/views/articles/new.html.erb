<h1>新規投稿</h1>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content, "投稿内容" %><br>
    <%= f.text_area :content %>
  </p>
  <%= f.submit "投稿" %>
<% end %>

<%= link_to "一覧画面に戻る", articles_path %>
