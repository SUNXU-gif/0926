<h1>マイページ</h1>

<p><strong>名前：</strong> <%= @user.name %></p>
<p><strong>メールアドレス：</strong> <%= @user.email %></p>
<p><strong>アイコン画像：</strong></p>
<% if @user.icon.attached? %>
  <%= image_tag @user.icon, class: "img-600" %>
<% else %>
  <%= image_tag "no_image.png", class: "img-600" %>
<% end %>

<p><%= link_to "編集", edit_mypage_path(@user) %></p>
